[include]
src/

[libs]
src/flow-typed

[lints]

[options]
experimental.strict_call_arity=true
esproposal.decorators=ignore
module.file_ext=.scss
module.file_ext=.js
module.file_ext=.jsx
module.file_ext=.mjs
module.file_ext=.json
module.ignore_non_literal_requires=true
module.system.node.resolve_dirname=node_modules
module.system.node.resolve_dirname=./src
module.name_mapper='^utils' -> '<PROJECT_ROOT>/src/utils'
module.name_mapper='^utils\/\(.*\)$' -> '<PROJECT_ROOT>/src/utils/\1'
module.name_mapper='^components\/\(.*\)$' -> '<PROJECT_ROOT>/src/components/\1'
module.name_mapper='^mutations\/\(.*\)$' -> '<PROJECT_ROOT>/src/mutations/\1'

[strict]
nonstrict-import
unclear-type
untyped-import
untyped-type-import
sketchy-null
sketchy-number
unnecessary-invariant
deprecated-utility
deprecated-type

[untyped]
.*/node_modules/react-select/.*
# TODO: remove
.*/node_modules/**

# TODO: uncomment
#[definitions]
#.*/node_modules/**

[ignore]
.*/vendor/.*
.*/node_modules/polished/**/.*
